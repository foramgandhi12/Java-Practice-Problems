        do {
            investment=(investment+investment*interest);
        } while (totalvalue>=MINVALUE);
        
        else 
            {
                
                }
        System.out.print("How many years will it take for a $"+investment+" investment to be worth at least $"+MINVALUE+" if compounded annually at "+interest+" %? ");
            totalvalue=input.nextInt();
