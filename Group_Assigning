package group.assignment;

/**
 * Foram Gandhi
 * Group Assigning
 */
import java.util.Scanner;
public class GroupAssignment {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        String lastname, firstname, ch;      
        
        Scanner input= new Scanner(System.in);  
        
        System.out.print("Enter your first name: ");    
            firstname=input.nextLine();      
        
        System.out.print("Enter your last name: ");     
            lastname=input.nextLine();       
        
        lastname=lastname.toLowerCase();                
        ch=lastname.substring(0,1);                     
        
        
        if (ch.equals("a") || ch.equals("b") || ch.equals("c") ||ch.equals("d") ||ch.equals("e") ||ch.equals("f") ||ch.equals("g") ||ch.equals("h") ||ch.equals("i"))
         {
            System.out.println(firstname+lastname +"is assigned to Group 1");
         }
        
        else if (ch.equals("j") ||ch.equals("k") ||ch.equals("l") ||ch.equals("m") ||ch.equals("n") ||ch.equals("o") ||ch.equals("p") ||ch.equals("q") ||ch.equals("r") ||ch.equals("s"))
         { 
            System.out.println(firstname+lastname +"is assigned to Group 2");
              
         }
        
        else if(ch.equals("t") ||ch.equals("u") ||ch.equals("v") ||ch.equals("w") ||ch.equals("x") ||ch.equals("y") ||ch.equals("z"))
         {
            System.out.println(firstname+lastname +"is assigned to Group 3");
         }
    }
}
